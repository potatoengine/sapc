{
  "$id": "https://raw.githubusercontent.com/potatoengine/sapc/master/schema/sap-1.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "sapc output schema",
  "type": "object",
  "required": [ "module", "annotations", "types", "exports" ],
  "properties": {
    "module": {
      "type": "string"
    },
    "annotations": { "$ref": "#/definitions/annotations" },
    "imports": {
      "type": "array",
      "items": { "type": "string" }
    },
    "types": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/type" }
    },
    "exports": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "definitions": {
    "type": {
      "oneOf": [
        { "$ref": "#/definitions/type_struct" },
        { "$ref": "#/definitions/type_enum" },
        { "$ref": "#/definitions/type_opaque" },
        { "$ref": "#/definitions/type_attribute" },
        { "$ref": "#/definitions/type_union" }
      ]
    },
    "type_opaque": {
      "type": "object",
      "required": [ "name", "category", "module", "annotations", "location" ],
      "properties": {
        "name": { "type": "string" },
        "category": {
          "type": "string",
          "enum": [ "opaque" ]
        },
        "module": { "type": "string" },
        "base": { "type": "string" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" }
      }
    },
    "type_struct": {
      "type": "object",
      "required": [ "name", "category", "fields", "module", "annotations", "location" ],
      "properties": {
        "name": { "type": "string" },
        "category": {
          "type": "string",
          "enum": [ "struct" ]
        },
        "module": { "type": "string" },
        "base": { "type": "string" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" },
        "fields": {
          "type": "array",
          "items": { "$ref": "#/definitions/field" }
        }
      }
    },
    "type_attribute": {
      "type": "object",
      "required": [ "name", "category", "fields", "module", "annotations", "location" ],
      "properties": {
        "name": { "type": "string" },
        "category": {
          "type": "string",
          "enum": [ "attribute" ]
        },
        "module": { "type": "string" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" },
        "fields": {
          "type": "array",
          "items": { "$ref": "#/definitions/field" }
        }
      }
    },
    "type_enum": {
      "type": "object",
      "required": [ "name", "category", "values", "module", "annotations", "location" ],
      "properties": {
        "name": { "type": "string" },
        "category": {
          "type": "string",
          "enum": [ "enum" ]
        },
        "module": { "type": "string" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" },
        "values": {
          "type": "array",
          "items": { "$ref": "#/definitions/enum_value" }
        }
      }
    },
    "type_union": {
      "type": "object",
      "required": [ "name", "category", "types", "module", "annotations", "location" ],
      "properties": {
        "name": { "type": "string" },
        "category": {
          "type": "string",
          "enum": [ "union" ]
        },
        "module": { "type": "string" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" },
        "types": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [ "name", "is_array" ],
            "properties": {
              "name": { "type": "string" },
              "is_array": { "type": "boolean" }
            }
          }
        }
      }
    },
    "enum_value": {
      "type": "object",
      "required": [ "name", "value" ],
      "properties": {
        "name": { "type": "string" },
        "value": { "type": "number" }
      }
    },
    "annotations": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/annotation" }
    },
    "annotation": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/value" }
    },
    "value": {
      "oneOf": [
        { "type": "integer" },
        { "type": "string" },
        { "type": "boolean" },
        { "type": "null" }
      ]
    },
    "field": {
      "type": "object",
      "required": [ "name", "type", "is_array", "annotations", "location" ],
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string" },
        "default": { "$ref": "#/definitions/value" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "is_array": { "type": "boolean" },
        "location": { "$ref": "#/definitions/location" }
      }
    },
    "location": {
      "type": "object",
      "required": [ "filename" ],
      "properties": {
        "filename": { "type": "string" },
        "line": {
          "type": "number",
          "minimum": 1
        },
        "column": {
          "type": "number",
          "minimum": 1
        }
      }
    }
  }
}

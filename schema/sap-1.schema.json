{
	"$id": "http://github.com/potatoengine/sapc/blob/master/sap-1.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "sapc output schema",
	"type": "object",
	"required": [ "types" ],
	"properties": {
		"types": {
			"type": "array",
			"items": { "$ref": "#/definitions/type" }
		}
	},
	"definitions": {
		"type": {
			"type": "object",
			"required": [ "name", "fields" ],
			"properties": {
				"name": { "type": "string" },
				"base": { "type": "string" },
				"imported": { "type": "boolean" },
				"attributes": { "$ref": "#/definitions/attributes" },
				"fields": {
					"type": "array",
					"items": {
						"type": "object",
						"required": [ "name", "type" ],
						"properties": {
							"name": { "type": "string" },
							"type": { "type": "string" },
							"default": {
								"oneOf": [
									{ "type": "integer" },
									{ "type": "string" },
									{ "type": "boolean" },
									{ "type": "null" }
								]
							},
							"attributes": { "$ref": "#/definitions/attributes" }
						}
					}
				}
			}
		},
		"attributes": {
			"type": "object",
			"patternProperties": {
				"^[a-zA-Z0-9_]+$": {
					"type": "object",
					"items": { "$ref": "#/definitions/attribute" }
				}
			}
		},
		"attribute": {
			"type": "array",
			"items": {
				"type": "object"
			}
		}
	}
}
{
  "$id": "https://raw.githubusercontent.com/potatoengine/sapc/master/schema/sap-1.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "sapc output schema",
  "type": "object",
  "required": [ "module", "attributes", "types", "exports" ],
  "properties": {
    "module": {
      "type": "string"
    },
    "attributes": { "$ref": "#/definitions/annotations" },
    "imports": {
      "type": "array",
      "items": { "type": "string" }
    },
    "types": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/type" }
    },
    "exports": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "definitions": {
    "type": {
      "type": "object",
      "required": [ "name", "fields", "module", "annotations", "location" ],
      "properties": {
        "name": { "type": "string" },
        "module": { "type": "string" },
        "base": { "type": "string" },
        "is_attribute": { "type": "boolean" },
        "is_enumeration": { "type": "boolean" },
        "is_union": { "type": "boolean" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" },
        "fields": {
          "type": "array",
          "items": { "$ref": "#/definitions/field" }
        }
      }
    },
    "annotations": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/annotation" }
    },
    "annotation": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/value" }
    },
    "value": {
      "oneOf": [
        { "type": "integer" },
        { "type": "string" },
        { "type": "boolean" },
        { "type": "null" }
      ]
    },
    "field": {
      "type": "object",
      "required": [ "name", "type", "annotations", "location" ],
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string" },
        "default": { "$ref": "#/definitions/value" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "is_array": { "type": "boolean" },
        "location": { "$ref": "#/definitions/location" }
      }
    },
    "location": {
      "type": "object",
      "required": [ "filename", "line" ],
      "properties": {
        "filename": { "type": "string" },
        "line": {
          "type": "number",
          "minimum": 1
        },
        "column": {
          "type": "number",
          "minimum": 1
        }
      }
    }
  }
}

{
  "id": "https://raw.githubusercontent.com/potatoengine/sapc/master/schema/sap-1.schema.json",
  "$schema": "http://json-schema.org/draft-05/schema#",
  "title": "sapc output schema",
  "type": "object",
  "required": [ "module", "types", "constants", "namespaces", "exports" ],
  "properties": {
    "module": { "$ref": "#/definitions/module" },
    "types": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/type" }
    },
    "contants": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/constant" }
    },
    "namespaces": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/namespace" }
    },
    "exports": {
      "type": "object",
      "requires": [ "types", "constants" ],
      "properties": {
        "types": {
          "type": "array",
          "items": { "type": "string" }
        },
        "constants": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  },
  "definitions": {
    "module": {
      "type": "object",
      "required": [ "name", "annotations", "imports" ],
      "properties": {
        "name": { "type": "string" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "imports": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "constant": {
      "type": "object",
      "required": [ "name", "qualified", "module", "type", "annotations", "value", "location" ],
      "properties": {
        "name": { "type": "string" },
        "qualified": { "type": "string" },
        "module": { "type": "string" },
        "namespace": { "type": "string" },
        "type": { "type": "string" },
        "value": { "$ref": "#/definitions/value" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" }
      }
    },
    "namespace": {
      "type": "object",
      "required": [ "name", "qualified", "module" ],
      "properties": {
        "name": { "type": "string" },
        "qualified": { "type": "string" },
        "namespace": { "type": "string" },
        "module": { "type": "string" },
        "types": {
          "type": "array",
          "items": { "type": "string" }
        },
        "constants": {
          "type": "array",
          "items": { "type": "string" }
        },
        "namespaces": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "type": {
      "oneOf": [
        { "$ref": "#/definitions/type_struct" },
        { "$ref": "#/definitions/type_union" },
        { "$ref": "#/definitions/type_attribute" },
        { "$ref": "#/definitions/type_enum" },
        { "$ref": "#/definitions/type_array" },
        { "$ref": "#/definitions/type_pointer" },
        { "$ref": "#/definitions/type_generic" },
        { "$ref": "#/definitions/type_specialized" },
        { "$ref": "#/definitions/type_primitive" },
        { "$ref": "#/definitions/type_alias" },
        { "$ref": "#/definitions/type_typename" }
      ]
    },
    "type_common": {
      "type": "object",
      "required": [ "name", "qualified", "kind", "module", "annotations", "location" ],
      "properties": {
        "name": { "type": "string" },
        "qualified": { "type": "string" },
        "namespace": { "type": "string" },
        "kind": { "type": "string" },
        "module": { "type": "string" },
        "base": { "type": "string" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" }
      }
    },
    "type_array": {
      "allOf": [
        { "$ref": "#/definitions/type_common" },
        {
          "type": "object",
          "required": [ "kind", "of" ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [ "array" ]
            },
            "of": { "type": "string" }
          }
        }
      ]
    },
    "type_pointer": {
      "allOf": [
        { "$ref": "#/definitions/type_common" },
        {
          "type": "object",
          "required": [ "kind", "to" ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [ "pointer" ]
            },
            "of": { "type": "string" }
          }
        }
      ]
    },
    "type_generic": {
      "allOf": [
        { "$ref": "#/definitions/type_common" },
        {
          "type": "object",
          "required": [ "kind" ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [ "generic" ]
            }
          }
        }
      ]
    },
    "type_specialized": {
      "allOf": [
        { "$ref": "#/definitions/type_common" },
        {
          "type": "object",
          "required": [ "kind", "ref", "typeParams" ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [ "specialized" ]
            },
            "ref": { "type": "string" },
            "typeParams": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      ]
    },
    "type_primitive": {
      "allOf": [
        { "$ref": "#/definitions/type_common" },
        {
          "type": "object",
          "required": [ "kind" ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [ "primitive" ]
            }
          }
        }
      ]
    },
    "type_typename": {
      "allOf": [
        { "$ref": "#/definitions/type_common" },
        {
          "type": "object",
          "required": [ "kind" ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [ "typename" ]
            }
          }
        }
      ]
    },
    "type_alias": {
      "allOf": [
        { "$ref": "#/definitions/type_common" },
        {
          "type": "object",
          "required": [ "kind" ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [ "alias" ]
            },
            "ref": {
              "type": "string"
            }
          }
        }
      ]
    },
    "type_struct": {
      "allOf": [
        { "$ref": "#/definitions/type_common" },
        {
          "type": "object",
          "required": [ "kind", "order", "fields" ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [ "struct" ]
            },
            "base": { "type": "string" },
            "order": {
              "type": "array",
              "items": { "type": "string" }
            },
            "fields": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/field"
              }
            }
          }
        }
      ]
    },
    "type_union": {
      "allOf": [
        { "$ref": "#/definitions/type_common" },
        {
          "type": "object",
          "required": [ "kind", "order", "members" ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [ "union" ]
            },
            "base": { "type": "string" },
            "order": {
              "type": "array",
              "items": { "type": "string" }
            },
            "members": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/member"
              }
            }
          }
        }
      ]
    },
    "type_attribute": {
      "allOf": [
        { "$ref": "#/definitions/type_common" },
        {
          "type": "object",
          "required": [ "kind", "order", "fields" ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [ "attribute" ]
            },
            "order": {
              "type": "array",
              "items": { "type": "string" }
            },
            "fields": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/field"
              }
            }
          }
        }
      ]
    },
    "type_enum": {
      "allOf": [
        { "$ref": "#/definitions/type_common" },
        {
          "type": "object",
          "required": [ "kind", "values" ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [ "enum" ]
            },
            "names": {
              "types": "array",
              "items": { "type": "string" }
            },
            "values": {
              "type": "object",
              "additionalProperties": { "type": "number" }
            }
          }
        }
      ]
    },
    "enum_value": {
      "type": "object",
      "required": [ "name", "value" ],
      "properties": {
        "name": { "type": "string" },
        "value": { "type": "number" }
      }
    },
    "annotations": {
      "type": "array",
      "items": { "$ref": "#/definitions/annotation" }
    },
    "annotation": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "location": { "$ref": "#/definitions/location" },
        "args": {
          "type": "object",
          "additionalProperties": { "$ref": "#/definitions/value" }
        }
      }
    },
    "value": {
      "anyOf": [
        { "type": "integer" },
        { "type": "string" },
        { "type": "boolean" },
        { "type": "null" },
        {
          "type": "object",
          "required": [ "kind", "type", "name", "value" ],
          "properties": {
            "kind": {
              "type": "string",
              "kind": [ "enum" ]
            },
            "type": { "type": "string" },
            "name": { "type": "string" },
            "value": { "type": "number" }
          }
        },
        {
          "type": "object",
          "required": [ "kind", "type" ],
          "properties": {
            "kind": {
              "type": "string",
              "kind": [ "typename" ]
            },
            "type": { "type": "string" }
          }
        },
        {
          "type": "array",
          "items": { "$ref": "#/definitions/value" }
        }
      ]
    },
    "field": {
      "type": "object",
      "required": [ "name", "type", "annotations", "location" ],
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string" },
        "default": { "$ref": "#/definitions/value" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" }
      }
    },
    "member": {
      "type": "object",
      "required": [ "name", "type", "annotations", "location" ],
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" }
      }
    },
    "location": {
      "type": "object",
      "required": [ "filename" ],
      "properties": {
        "filename": { "type": "string" },
        "line": {
          "type": "number",
          "minimum": 1
        },
        "column": {
          "type": "number",
          "minimum": 1
        }
      }
    }
  }
}

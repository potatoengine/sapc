{
  "id": "https://raw.githubusercontent.com/potatoengine/sapc/master/schema/sap-1.schema.json",
  "$schema": "http://json-schema.org/draft-05/schema#",
  "title": "sapc output schema",
  "type": "object",
  "required": [ "module", "types", "constants", "namespaces" ],
  "properties": {
    "module": { "$ref": "#/definitions/module" },
    "types": {
      "type": "array",
      "items": { "$ref": "#/definitions/type" }
    },
    "contants": {
      "type": "array",
      "items": { "$ref": "#/definitions/constant" }
    },
    "namespaces": {
      "type": "array",
      "items": { "$ref": "#/definitions/namespace" }
    }
  },
  "definitions": {
    "module": {
      "type": "object",
      "required": [ "name", "annotations", "imports" ],
      "properties": {
        "name": { "type": "string" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "imports": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "constant": {
      "type": "object",
      "required": [ "name", "qualified", "module", "type", "annotations", "value", "location" ],
      "properties": {
        "name": { "type": "string" },
        "qualified": { "type": "string" },
        "module": { "type": "string" },
        "namespace": { "type": "string" },
        "type": { "type": "string" },
        "value": { "$ref": "#/definitions/value" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" }
      }
    },
    "namespace": {
      "type": "object",
      "required": [ "name", "qualified", "module" ],
      "properties": {
        "name": { "type": "string" },
        "qualified": { "type": "string" },
        "namespace": { "type": "string" },
        "module": { "type": "string" },
        "types": {
          "type": "array",
          "items": { "type": "string" }
        },
        "constants": {
          "type": "array",
          "items": { "type": "string" }
        },
        "namespaces": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "type": {
      "oneOf": [
        { "$ref": "#/definitions/type_basic" },
        { "$ref": "#/definitions/type_aggregate" },
        { "$ref": "#/definitions/type_enum" },
        { "$ref": "#/definitions/type_specialized" }
      ]
    },
    "type_basic": {
      "type": "object",
      "required": [ "name", "qualified", "kind", "module", "annotations", "location" ],
      "properties": {
        "name": { "type": "string" },
        "qualified": { "type": "string" },
        "namespace": { "type": "string" },
        "kind": {
          "type": "string",
          "enum": [ "simple", "array", "pointer", "alias", "generic", "typename" ]
        },
        "module": { "type": "string" },
        "refType": { "type": "string" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" }
      }
    },
    "type_aggregate": {
      "type": "object",
      "required": [ "name", "qualified", "kind", "module", "annotations", "location", "fields" ],
      "properties": {
        "name": { "type": "string" },
        "qualified": { "type": "string" },
        "namespace": { "type": "string" },
        "kind": {
          "type": "string",
          "enum": [ "struct", "union", "attribute", "specialized" ]
        },
        "module": { "type": "string" },
        "refType": { "type": "string" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" },
        "fields": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/field"
          }
        },
        "generics": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "type_enum": {
      "type": "object",
      "required": [ "name", "qualified", "kind", "module", "annotations", "location", "items" ],
      "properties": {
        "name": { "type": "string" },
        "qualified": { "type": "string" },
        "namespace": { "type": "string" },
        "kind": {
          "type": "string",
          "enum": [ "enum" ]
        },
        "module": { "type": "string" },
        "refType": { "type": "string" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/enum_value"
          }
        }
      }
    },
    "type_specialized": {
      "type": "object",
      "required": [ "name", "qualified", "kind", "module", "annotations", "location", "refType", "typeParams" ],
      "properties": {
        "name": { "type": "string" },
        "qualified": { "type": "string" },
        "namespace": { "type": "string" },
        "kind": {
          "type": "string",
          "enum": [ "specialized" ]
        },
        "module": { "type": "string" },
        "refType": { "type": "string" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" },
        "typeParams": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "enum_value": {
      "type": "object",
      "required": [ "name", "value" ],
      "properties": {
        "name": { "type": "string" },
        "value": { "type": "number" }
      }
    },
    "annotations": {
      "type": "array",
      "items": { "$ref": "#/definitions/annotation" }
    },
    "annotation": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "location": { "$ref": "#/definitions/location" },
        "args": {
          "type": "array",
          "items": { "$ref": "#/definitions/value" }
        }
      }
    },
    "value": {
      "anyOf": [
        { "type": "integer" },
        { "type": "string" },
        { "type": "boolean" },
        { "type": "null" },
        {
          "type": "object",
          "required": [ "kind", "type", "name", "value" ],
          "properties": {
            "kind": {
              "type": "string",
              "kind": [ "enum" ]
            },
            "type": { "type": "string" },
            "name": { "type": "string" },
            "value": { "type": "number" }
          }
        },
        {
          "type": "object",
          "required": [ "kind", "type" ],
          "properties": {
            "kind": {
              "type": "string",
              "kind": [ "typename" ]
            },
            "type": { "type": "string" }
          }
        },
        {
          "type": "array",
          "items": { "$ref": "#/definitions/value" }
        }
      ]
    },
    "field": {
      "type": "object",
      "required": [ "name", "type", "annotations", "location" ],
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string" },
        "default": { "$ref": "#/definitions/value" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" }
      }
    },
    "member": {
      "type": "object",
      "required": [ "name", "type", "annotations", "location" ],
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "location": { "$ref": "#/definitions/location" }
      }
    },
    "location": {
      "type": "object",
      "required": [ "filename" ],
      "properties": {
        "filename": { "type": "string" },
        "line": {
          "type": "number",
          "minimum": 1
        },
        "column": {
          "type": "number",
          "minimum": 1
        }
      }
    }
  }
}
